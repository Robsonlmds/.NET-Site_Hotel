@{
    ViewData["Title"] = "HomePage";

    var allContent = ViewBag.ShowAllContent as string;
}

<style>
    body {
        margin: 0;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-image: url('assets/bg-site.jpg');
        background-size: cover;
        background-position: center;
        color: white;
    }

    h1, p, img {
        max-width: 100%;
    }

    h1 {
        text-align: center;
        font-family: "Agdasima", sans-serif;
        font-weight: 400;
        font-style: normal;
    }

    p {
        padding: 20px;
        text-align: justify;
    }

    img {
        display: block;
        margin: 0 auto;
    }

    .btn-login {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    p {
        font-family: "Agdasima", sans-serif;
        font-weight: 400;
        font-style: normal;
        color: white;
    }

    label{
        font-size:1.5rem;
        font-family: "Agdasima", sans-serif;
        font-weight: 400;
        font-style: normal;
        color: white;
    }

</style>


<html>

<meta name="viewport" content="width=device-width, initial-scale=0.3">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Agdasima:wght@400;700&display=swap" rel="stylesheet">



    <div style="opacity: 65%">

        <div style="font-size: 3rem">
            <p class="text-center" style="color: black"><b>Hotel Booking Widget</b></p>
        </div>

        <div class="w3-modal-content w3-card-4" style="max-width:65%">

            <form class="w3-container" style="background-color:black" method="post">

                <p class="text-center" style="font-size: 3rem">Reserve sua suíte</p>

                <div class="section">

                @* /////////////////////////////////// Fild Qtd People /////////////////////////////////// *@

                    <div class="row mt-2">

                        <div class="col-6">

                            <label>Nun de Adutos</label>

                            <select name="qtdAdults" class="form-control">
                                <option value="1"> 1 </option>
                                <option value="2"> 2 </option>
                                <option value="3"> 3 </option>
                                <option value="4"> 4 </option>
                                <option value="5"> 5 </option>
                                <option value="6"> 6 </option>
                                <option value="7"> 7 </option>
                                <option value="8"> 8 </option>
                                <option value="9"> 9 </option>
                                <option value="10"> 10 </option>
                            </select>
                        </div>

                        <div class="col-6">

                            <label>Nun de Crianças</label>

                            <select name="qtdQtdChildren" class="form-control">
                                <option value="0"> 0 </option>
                                <option value="1"> 1 </option>
                                <option value="2"> 2 </option>
                                <option value="3"> 3 </option>
                                <option value="4"> 4 </option>
                                <option value="5"> 5 </option>
                                <option value="6"> 6 </option>
                                <option value="7"> 7 </option>
                                <option value="8"> 8 </option>
                                <option value="9"> 9 </option>
                                <option value="10"> 10 </option>
                            </select>
                        </div>

                    </div>

                @* /////////////////////////////////// Fild Suíte /////////////////////////////////// *@

                    <div class="col-12 mt-4">

                        <label>Suíte</label>

                        <select name="suiteName" class="form-control">
                            <option value="null">Selecione uma suíte</option>
                            <option value="Suite Presidencial">Suíte Presidencial</option>
                            <option value="Suite Luxo">Suíte Luxo</option>
                            <option value="Suite Familiar">Suíte Familiar</option>
                            <option value="Suite Simples">Suíte Simples</option>
                            <option value="Suite Master">Suíte Master</option>
                        </select>
                    </div>

                @* /////////////////////////////////// Fild Dates /////////////////////////////////// *@


                    <div class="row">

                        <label class="mb-2 mt-4">Selecione as datas</label>

                        <div class="col-6">
                            <label style="font-size: 1rem">Check-In</label>
                            <br />
                            <input type="date" name="checkIn" class="form-control"/>
                        </div>
                       
                        <div class="col-6">
                            <label style="font-size: 1rem">Check-Out</label>
                            <br />
                            <input type="date" name="checkOut" class="form-control"/>
                        </div>

                    </div>

                @* /////////////////////////////////// Fild Cusine /////////////////////////////////// *@

                    <div class="mt-3">

                        <label class="mb-2">Escolha a roupa de cama</label>

                        <div class="form-check">
                            <input style="margin-top: 1.2rem" name="bedLinen" class="form-check-input" type="radio" id="flexRadioDefault1" value="inverno" checked>
                            <label class="form-check-label mt-2" for="flexRadioDefault1" style="font-size: 1.5rem">
                                Inverno
                            </label>
                        </div>

                        <div class="form-check">
                            <input style="margin-top: 1.2rem" name="bedLinen" class="form-check-input" type="radio" id="flexRadioDefault2" value="verao">
                            <label class="form-check-label mt-2" for="flexRadioDefault2" style="font-size: 1.5rem">
                                Verão
                            </label>
                        </div>
                  
                    </div>
                    
                @* /////////////////////////////////// Fild Btn /////////////////////////////////// *@

                    <div class="mt-3 mb-4 text-center d-grid gap-2 col-6 mx-auto">
                        <button class=" btn btn-outline-success btn-lg" type="submit">Reservar</button>

                    </div>

                </div>
            </form>
        </div>
    </div>

</html>
