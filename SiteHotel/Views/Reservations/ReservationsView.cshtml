@section Scripts {

    <script>

        $(function () {
            $('#copyModal').on('show.bs.modal', function () {
                var myCopyModal = $(this);
                clearTimeout(myCopyModal.data('hideInterval'));
                myCopyModal.data('hideInterval', setTimeout(function () {
                    myCopyModal.modal('hide');
                }, 3000));
            });
        });

    </script>

}

</html>



