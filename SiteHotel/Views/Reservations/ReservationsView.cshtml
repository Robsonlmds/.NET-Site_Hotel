    <body>
     
            @if (allContent != null)
            {
                <p> Quantidade de Adultos: @qtdAdults </p>
                <br />

                @if (qtdQtdChildren.Contains("0") == false)
                {
                <p> Quantidade de Crianças: @qtdQtdChildren</p>
                }

                <p> Suíte escolhida: @suiteName </p>
                <br />

                <p> Data do CheckIn: @checkIn </p>
                <br />

                <p> Data do CheckOut @checkOut </p>
                <br />

                <p> Roupa de cama: @bedLinen </p>
                <br />
